<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.stevendiaz.gasgauge" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckMilesActivity"
            android:label="@string/title_activity_check_miles" >
        </activity>
        <activity
            android:name=".VehicleInfoActivity"
            android:label="VehicleInfoActivity" >
        </activity>
        <activity
            android:name=".FillUpActivity"
            android:label="@string/title_activity_fill_up" >
        </activity>
    </application>

</manifest>
