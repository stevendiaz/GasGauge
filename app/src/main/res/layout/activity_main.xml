<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.stevendiaz.gasgauge.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_check_miles"
        android:id="@+id/main_check_miles"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startCheckMilesActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_fill_up"
        android:id="@+id/main_fill_up"
        android:layout_above="@+id/main_check_miles"
        android:layout_alignLeft="@+id/main_check_miles"
        android:layout_alignStart="@+id/main_check_miles"
        android:layout_alignRight="@+id/main_check_miles"
        android:layout_alignEnd="@+id/main_check_miles"
        android:onClick="startFillUpActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_update_vehicle"
        android:id="@+id/main_update_vehicle"
        android:layout_below="@+id/main_check_miles"
        android:layout_centerHorizontal="true"
        android:onClick="startVehicleInfoActivity" />
</RelativeLayout>
